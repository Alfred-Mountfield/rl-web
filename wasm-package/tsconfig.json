{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "lib": ["esnext", "dom"],
    "importHelpers": true,
    // output .d.ts declaration files for consumers
    "declaration": true,
    "baseUrl": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
  ]
}